<?xml version="1.0"?>
<definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3">
  <properties>
    <root_name>mods</root_name>
    <schema_uri/>
    <namespaces default="http://www.loc.gov/mods/v3">
      <namespace prefix="mods">http://www.loc.gov/mods/v3</namespace>
      <namespace prefix="xsi">http://www.w3.org/2001/XMLSchema-instance</namespace>
      <namespace prefix="xlink">http://www.w3.org/1999/xlink</namespace>
    </namespaces>
  </properties>
  <form>
    <properties>
      <type>form</type>
      <access>TRUE</access>
      <collapsed>FALSE</collapsed>
      <collapsible>FALSE</collapsible>
      <description>This is the General Metadata Profile used and maintained by the Digital Scholarship Unit at the UTSC Library</description>
      <disabled>FALSE</disabled>
      <executes_submit_callback>FALSE</executes_submit_callback>
      <multiple>FALSE</multiple>
      <required>FALSE</required>
      <resizable>FALSE</resizable>
      <tree>TRUE</tree>
      <actions>
        <create>NULL</create>
        <read>
          <path>//mods:mods[1]</path>
          <context>document</context>
        </read>
        <update>NULL</update>
        <delete>NULL</delete>
      </actions>
    </properties>
    <children>
      <element name="titleInfo">
        <properties>
          <type>markup</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>element</type>
              <prefix>NULL</prefix>
              <value>titleInfo</value>
            </create>
            <read>
              <path>mods:titleInfo</path>
              <context>parent</context>
            </read>
            <update>NULL</update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children>
          <element name="title">
            <properties>
              <type>textfield</type>
              <access>TRUE</access>
              <collapsed>FALSE</collapsed>
              <collapsible>FALSE</collapsible>
              <description>A descriptive title for the item, either taken from the resource or supplied by the describer. Doesn&#x2019;t need to be unique.</description>
              <disabled>FALSE</disabled>
              <executes_submit_callback>FALSE</executes_submit_callback>
              <multiple>FALSE</multiple>
              <required>TRUE</required>
              <resizable>FALSE</resizable>
              <title>Title</title>
              <tree>TRUE</tree>
              <actions>
                <create>
                  <path>self::node()</path>
                  <context>parent</context>
                  <schema/>
                  <type>element</type>
                  <prefix>NULL</prefix>
                  <value>title</value>
                </create>
                <read>
                  <path>mods:title</path>
                  <context>parent</context>
                </read>
                <update>
                  <path>self::node()</path>
                  <context>self</context>
                </update>
                <delete>NULL</delete>
              </actions>
            </properties>
            <children/>
          </element>
          <element name="subTitle">
            <properties>
              <type>textfield</type>
              <access>TRUE</access>
              <collapsed>FALSE</collapsed>
              <collapsible>FALSE</collapsible>
              <description>If necessary, a secondary part of the item&#x2019;s title goes here.</description>
              <disabled>FALSE</disabled>
              <executes_submit_callback>FALSE</executes_submit_callback>
              <multiple>FALSE</multiple>
              <required>FALSE</required>
              <resizable>FALSE</resizable>
              <title>Sub Title</title>
              <tree>TRUE</tree>
              <actions>
                <create>
                  <path>self::node()</path>
                  <context>parent</context>
                  <schema/>
                  <type>element</type>
                  <prefix>NULL</prefix>
                  <value>subTitle</value>
                </create>
                <read>
                  <path>mods:subTitle</path>
                  <context>parent</context>
                </read>
                <update>
                  <path>self::node()</path>
                  <context>self</context>
                </update>
                <delete>NULL</delete>
              </actions>
            </properties>
            <children/>
          </element>
        </children>
      </element>
      <element name="abstract">
        <properties>
          <type>textarea</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <description>The description field allows for descriptive/contextual information about the item.</description>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Description</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>element</type>
              <prefix>NULL</prefix>
              <value>abstract</value>
            </create>
            <read>
              <path>mods:abstract</path>
              <context>parent</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="relatedItem1">
        <properties>
          <type>textfield</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Related Item (Archival Finding Aid)</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>xml</type>
              <prefix>NULL</prefix>
              <value>&lt;relatedItem type="otherFormat"&gt;&lt;titleInfo&gt;&lt;title&gt;Archival Finding Aid&lt;/title&gt;&lt;/titleInfo&gt;&lt;location&gt;&lt;url&gt;%value%&lt;/url&gt;&lt;/location&gt;&lt;/relatedItem&gt;</value>
            </create>
            <read>
              <path>mods:relatedItem[@type='otherFormat']/mods:location/mods:url</path>
              <context>document</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="relatedItem2">
        <properties>
          <type>textfield</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Related Item (Exhibit Website)</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>xml</type>
              <prefix>NULL</prefix>
              <value>&lt;relatedItem type="otherVersion"&gt;&lt;titleInfo&gt;&lt;title&gt;Exhibit Website&lt;/title&gt;&lt;/titleInfo&gt;&lt;location&gt;&lt;url&gt;%value%&lt;/url&gt;&lt;/location&gt;&lt;/relatedItem&gt;</value>
            </create>
            <read>
              <path>mods:relatedItem[@type='otherVersion']/mods:location/mods:url</path>
              <context>document</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="accessCondition">
        <properties>
          <type>textarea</type>
          <access>TRUE</access>
          <attributes>
            <type>use and reproduction</type>
          </attributes>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <default_value>Digital files found in the UTSC Library's Digital Collections are meant for research and private study used in compliance with copyright legislation. Access to digital images and text found on this website and the technical capacity to download or copy it does not imply permission to re-use. Prior written permission to publish, or otherwise use images and text found on the website must be obtained from the copyright holder. Please contact UTSC Library, Archives &amp; Special Collections for further information.</default_value>
          <description>A statement on permitted use of the item.</description>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>TRUE</required>
          <resizable>FALSE</resizable>
          <title>Rights</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>xml</type>
              <prefix>NULL</prefix>
              <value>&lt;accessCondition type="use and reproduction"&gt;%value%&lt;/accessCondition&gt;</value>
            </create>
            <read>
              <path>mods:accessCondition[@type='use and reproduction']</path>
              <context>parent</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="identifier_pid">
        <properties>
          <type>textfield</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <description>This should be the item&#x2019;s PID</description>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Identifier (PID)</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>xml</type>
              <prefix>NULL</prefix>
              <value>&lt;identifier type="uri"&gt;%value%&lt;/identifier&gt;</value>
            </create>
            <read>
              <path>mods:identifier[@type='uri']</path>
              <context>parent</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="identifier">
        <properties>
          <type>textfield</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <description>
Use the reference code found in Discover Archives (https://discoverarchives.library.utoronto.ca/index.php/university-of-toronto-scarborough-library)  for the file (collection).  For items (objects), use the file (collection) reference code followed by a sequential number. The local identifier should include the collection/fonds number, series numbers, subseries number (if applicable), file number and item number.  Omit the country and institution code (CA UTSC). This element is only used for items that are surrogates of UTSC-held physical items
</description>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Identifier (local)</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>xml</type>
              <prefix>NULL</prefix>
              <value>&lt;identifier type="local"&gt;%value%&lt;/identifier&gt;</value>
            </create>
            <read>
              <path>mods:identifier[@type='local']</path>
              <context>parent</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
      <element name="note">
        <properties>
          <type>textarea</type>
          <access>TRUE</access>
          <collapsed>FALSE</collapsed>
          <collapsible>FALSE</collapsible>
          <description>General note about the work that does not fit anywhere else. Use sparingly.</description>
          <disabled>FALSE</disabled>
          <executes_submit_callback>FALSE</executes_submit_callback>
          <multiple>FALSE</multiple>
          <required>FALSE</required>
          <resizable>FALSE</resizable>
          <title>Note</title>
          <tree>TRUE</tree>
          <actions>
            <create>
              <path>self::node()</path>
              <context>parent</context>
              <schema/>
              <type>element</type>
              <prefix>NULL</prefix>
              <value>note</value>
            </create>
            <read>
              <path>mods:note</path>
              <context>parent</context>
            </read>
            <update>
              <path>self::node()</path>
              <context>self</context>
            </update>
            <delete>NULL</delete>
          </actions>
        </properties>
        <children/>
      </element>
    </children>
  </form>
</definition>
